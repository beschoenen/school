<UserControl x:Class="SOh_ParkInspect.Control.Question.DateQuestionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SOh_ParkInspect.Control"
             mc:Ignorable="d"
             d:DesignHeight="100"
             d:DesignWidth="250"
             Margin="10"
             DataContext="{Binding DateQuestion, Source={StaticResource Locator}}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0"
               VerticalAlignment="Center"
               Margin="0,0,0,10"
               FontSize="20"
               Content="{Binding Question.Text}" />

        <DatePicker Grid.Row="1"
                    SelectedDate="{Binding Answer, Mode=TwoWay}"
                    SelectedDateChanged="DatePicker_OnSelectedDateChanged" />

    </Grid>
</UserControl>